generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model SolanaBlock {
  id               String   @id @default(cuid())
  blockNumber      BigInt   @unique
  transactionCount Int
  blockhash        String
  timestamp        BigInt?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("solana_blocks")
}
